# Staging Environment Configuration
# Copy this to .env.staging and update with staging-specific values

# Server Configuration
NODE_ENV=staging
PORT=3000
HOST=0.0.0.0

# Google Cloud Configuration
GOOGLE_CLOUD_PROJECT_ID=pathfinder-app-staging
GOOGLE_APPLICATION_CREDENTIALS=./pathfinder-sa-staging-key.json

# Firebase Configuration
FIREBASE_PROJECT_ID=pathfinder-app-staging
FIREBASE_DATABASE_URL=https://pathfinder-app-staging-default-rtdb.asia-south1.firebasedatabase.app/
FIREBASE_API_KEY=your_staging_firebase_api_key_here
FIREBASE_AUTH_DOMAIN=pathfinder-app-staging.firebaseapp.com
FIREBASE_STORAGE_BUCKET=pathfinder-app-staging.appspot.com
FIREBASE_MESSAGING_SENDER_ID=your_staging_sender_id_here
FIREBASE_APP_ID=your_staging_app_id_here
FIREBASE_MEASUREMENT_ID=your_staging_measurement_id_here

# Service Account Configuration
FIREBASE_CLIENT_EMAIL=pathfinder-sa@pathfinder-app-staging.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_STAGING_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----\n"

# Database Configuration
DATABASE_URL=projects/pathfinder-app-staging/databases/(default)
FIRESTORE_DATABASE_ID=(default)

# External APIs (can use same as production or test keys)
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here
GOOGLE_AI_API_KEY=your_google_ai_api_key_here
MAPBOX_ACCESS_TOKEN=your_mapbox_token_here

# Authentication
JWT_SECRET=your_staging_jwt_secret_key_here
JWT_EXPIRES_IN=24h
SESSION_SECRET=your_staging_session_secret_here

# Cache Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Storage Configuration
STORAGE_BUCKET=pathfinder-app-staging-storage

# Security Configuration
CORS_ORIGIN=https://pathfinder-app-staging.web.app,http://localhost:3000
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=500

# Monitoring and Logging
LOG_LEVEL=debug
SENTRY_DSN=your_staging_sentry_dsn_here
NEW_RELIC_LICENSE_KEY=your_staging_new_relic_license_key

# Feature Flags
ENABLE_ANALYTICS=true
ENABLE_CACHING=false
ENABLE_RATE_LIMITING=true
ENABLE_WEBSOCKETS=true

# Development specific
DEBUG=true
MOCK_EXTERNAL_APIS=false
BYPASS_AUTH=false

# Performance and Scaling (lower for staging)
MAX_MEMORY=1Gi
MAX_CPU=1
MIN_INSTANCES=0
MAX_INSTANCES=10
CONCURRENCY=40

# Backup Configuration
BACKUP_BUCKET=pathfinder-app-staging-backups
BACKUP_RETENTION_DAYS=7