# Production Environment Configuration
# DO NOT COMMIT THIS FILE TO VERSION CONTROL
# Generated for pathfinder-app project

# Server Configuration
NODE_ENV=production
PORT=8080
HOST=0.0.0.0

# Google Cloud Configuration
GOOGLE_CLOUD_PROJECT_ID=pathfinder-app
GOOGLE_APPLICATION_CREDENTIALS=./pathfinder-sa-key.json

# Firebase Configuration
FIREBASE_PROJECT_ID=pathfinder-app
FIREBASE_DATABASE_URL=https://pathfinder-app-default-rtdb.asia-south1.firebasedatabase.app/
FIREBASE_API_KEY=your_firebase_api_key_here
FIREBASE_AUTH_DOMAIN=pathfinder-app.firebaseapp.com
FIREBASE_STORAGE_BUCKET=pathfinder-app.appspot.com
FIREBASE_MESSAGING_SENDER_ID=your_sender_id_here
FIREBASE_APP_ID=your_app_id_here
FIREBASE_MEASUREMENT_ID=your_measurement_id_here

# Service Account Configuration (for server-side Firebase Admin)
FIREBASE_CLIENT_EMAIL=pathfinder-sa@pathfinder-app.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----\n"

# Database Configuration
DATABASE_URL=projects/pathfinder-app/databases/(default)
FIRESTORE_DATABASE_ID=(default)

# External APIs
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here
GOOGLE_AI_API_KEY=your_google_ai_api_key_here
MAPBOX_ACCESS_TOKEN=your_mapbox_token_here

# Authentication
JWT_SECRET=your_super_secure_jwt_secret_key_here
JWT_EXPIRES_IN=24h
SESSION_SECRET=your_super_secure_session_secret_here

# Cache Configuration
REDIS_URL=redis://redis-server:6379
REDIS_HOST=redis-server
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here

# Storage Configuration
STORAGE_BUCKET=pathfinder-app-storage

# Security Configuration
CORS_ORIGIN=https://pathfinder-app.web.app,https://pathfinder.dev
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# Monitoring and Logging
LOG_LEVEL=info
SENTRY_DSN=your_sentry_dsn_here
NEW_RELIC_LICENSE_KEY=your_new_relic_license_key

# Feature Flags
ENABLE_ANALYTICS=true
ENABLE_CACHING=true
ENABLE_RATE_LIMITING=true
ENABLE_WEBSOCKETS=false

# Secret Manager References (for Cloud Run)
# These will be resolved by Google Cloud Secret Manager
JWT_SECRET_REF=projects/pathfinder-app/secrets/jwt-secret/versions/latest
GOOGLE_MAPS_API_KEY_REF=projects/pathfinder-app/secrets/google-maps-api-key/versions/latest
SESSION_SECRET_REF=projects/pathfinder-app/secrets/session-secret/versions/latest

# Performance and Scaling
MAX_MEMORY=2Gi
MAX_CPU=2
MIN_INSTANCES=1
MAX_INSTANCES=100
CONCURRENCY=80

# Backup Configuration
BACKUP_BUCKET=pathfinder-app-backups
BACKUP_RETENTION_DAYS=30