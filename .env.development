# Development Environment Configuration
NODE_ENV=development
PORT=3000
HOST=localhost

# Development Database (if using local database)
DATABASE_URL=postgresql://pathfinder:password@localhost:5432/pathfinder_dev

# Firebase Development Configuration
FIREBASE_PROJECT_ID=pathfinder-dev
# Note: In development, you can use Firebase emulators
# firebase emulators:start

# Development Cache
REDIS_URL=redis://localhost:6379

# Development Secrets (use simple values for dev)
JWT_SECRET=dev-jwt-secret-change-in-production
SESSION_SECRET=dev-session-secret-change-in-production

# Development CORS
CORS_ORIGIN=http://localhost:3000

# Development Features
DEBUG=true
BYPASS_AUTH=true
MOCK_EXTERNAL_APIS=true

# AI Development Configuration
GOOGLE_AI_API_KEY=mock_development_key

# Logging
LOG_LEVEL=debug

# Rate Limiting (more lenient in development)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# Development Analytics (disabled)
ENABLE_ANALYTICS=false